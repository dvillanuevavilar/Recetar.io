<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:padding="30dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:baselineAligned="false">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titulo"
                            android:id="@+id/tvTitulo"
                            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="25dp"
                            android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <ToggleButton
                            android:layout_width="38dp"
                            android:layout_height="35dp"
                            android:id="@+id/btnFav" android:layout_gravity="right"
                            android:background="@android:drawable/btn_star" android:textOff=" " android:textOn=" "
                            android:checked="false"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center_vertical">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/clock" android:layout_weight="0.05">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView3" android:src="@drawable/ic_timer_white_24dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="0.05">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo"
                            android:id="@+id/tvTiempo"
                            android:layout_below="@+id/tvTitulo"
                            android:layout_alignStart="@+id/tvTitulo" android:textIsSelectable="false"
                            android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/min"
                            android:id="@+id/textView7" android:layout_alignBottom="@+id/tvTiempo"
                            android:layout_toEndOf="@+id/tvTiempo" android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="0.05">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView4" android:src="@drawable/ic_room_service_white_24dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvDificultad" android:layout_above="@+id/tvComensales"
                            android:layout_alignParentEnd="true" android:text="Dificultad"
                            android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center_vertical">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_weight="0.05">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:id="@+id/imageView5" android:src="@drawable/ic_group_white_24dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Comensales"
                              android:id="@+id/tvComensales" android:layout_below="@+id/tvTiempo"
                              android:layout_alignStart="@+id/tvTiempo" android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_weight="0.05">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:id="@+id/imageView6" android:src="@drawable/ic_person_pin_white_24dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Autor"
                              android:id="@+id/tvAutor" android:layout_alignBottom="@+id/tvComensales"
                              android:layout_alignStart="@+id/tvDificultad"
                              android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ingredientes"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/tvComensales"
                        android:layout_alignStart="@+id/tvComensales"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="18dp"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvIngredientes"
                        android:layout_below="@+id/textView6" android:layout_alignStart="@+id/textView6"
                        android:autoText="false"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elaboracion"
                        android:id="@+id/textView8"
                        android:layout_below="@+id/tvIngredientes" android:layout_alignStart="@+id/tvIngredientes"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="18dp"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tvElaboracion"
                          android:layout_below="@+id/textView8" android:layout_alignStart="@+id/textView8"
                          android:layout_alignEnd="@+id/tvIngredientes"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="319dp"
                        android:id="@+id/idImgVista"
                        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>