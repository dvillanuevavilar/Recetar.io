<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Titulo"
                android:id="@+id/tvTituloSubItem"
                android:layout_marginStart="19dp" android:paddingTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tiempo"
                android:id="@+id/textView2"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/tvTituloSubItem"
                android:layout_alignStart="@+id/tvTituloSubItem"
                android:layout_marginTop="2dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="10 minutos"
                android:id="@+id/tvTiempoSubitems"
                android:layout_alignTop="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/dificultad"
                android:id="@+id/textView3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Facil"
                android:id="@+id/tvDificultadSubitems"
                android:layout_alignTop="@+id/textView3"
                android:layout_toEndOf="@id/textView3"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comensales"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/tvNumComensales"
                android:layout_toStartOf="@+id/tvNumComensales"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvNumComensales"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/tvTiempoSubitems"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autor"
                android:id="@+id/textView11"
                android:layout_alignBottom="@+id/tvDificultadSubitems"
                android:layout_alignStart="@+id/textView10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:id="@+id/tvAutor"
                android:layout_alignBottom="@+id/textView11"
                android:layout_toEndOf="@+id/textView11"
                android:layout_marginLeft="5dp"/>
    </RelativeLayout>
</LinearLayout>